{
  "name": "express-api-with-tests",
  "version": "1.0.0",
  "description": "Express.js API with GET/POST endpoints and Jest tests",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "express",
    "api",
    "jest",
    "supertest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "routes/**/*.js"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "type": "commonjs"
}
